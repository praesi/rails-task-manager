<%= form_for @todo, class: '', id: '' do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name, class: 'text' %>
  <%= f.label :description, 'Description' %>
  <%= f.text_field :description %>
  <%= f.label :done, 'Is it done?' %>
  <%= f.check_box :done %>
  <%= f.submit wording %>
<% end %>
